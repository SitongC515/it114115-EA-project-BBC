{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
    <h1>{{ _('Sign In to BBC News') }}</h1>
    <p>{{ _('Please enter your credentials to access your account.') }}</p>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ wtf.quick_form(form) }}
        </div>
    </div>
    <br/>
    <p>
        {{ _('New User?') }} <a href="{{ url_for('register') }}">{{ _('Create an Account') }}</a>
    </p>
    <p>
        {{ _('Forgot Your Password?') }}
        <a href="{{ url_for('reset_password_request') }}">{{ _('Reset It Here') }}</a>
    </p>
{% endblock %}