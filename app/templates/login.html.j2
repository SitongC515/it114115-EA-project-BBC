{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
<html>
<head>
    <title>Sign in to your BBC account</title>
    <style>
         body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            background-color: #000; /* BBC's dark background */
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

       .container {
            width: 400px;
            padding: 20px;
            text-align: center;
        }


        .bbc-logo {
            margin-bottom: 30px;
        }

        .bbc-logo img {
            width: 100px; /* Adjust logo size */
        }

        h2 {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
            font-size: 0.9em;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #666;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #333; /* Dark input background */
            color: #fff;
        }

        button {
            background-color: #007bff; /* BBC's blue */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
            width: 100%;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        .help-links {
            margin-top: 20px;
        }

        .help-links a {
            display: block;
            margin-bottom: 10px;
        }

        .register-link {
            margin-top: 30px;
        }

        .ose-button {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #fff;
            text-decoration: none;
            font-size: 1.2em;
        }
    </style>
</head>
<body>
     <div class="container">
        <a href="index.html/base.html" class="close-button">
        <img src="https://i0.wp.com/cleanfeed.thetvroom.com/media/2019/08/bbc-logo-correct-001-01.png?resize=800%2C271&ssl=1" width="400" class="d-block mx-auto mb-3"></a>
        

        <form method="POST">
            {{ wtf.quick_form(form) }}
            
        </form>
    

        <p>Sign in and we'll help you discover more things you'll love.</p>

        <div class="help-links">
            <a href="/reset_password_request">I have forgotten my password</a><br>
            
        </div>

        <hr style="border-top: 1px solid #444;">

        <div class="register-link">
            <p>Don't have a BBC account?</p>
            <a href="/register">Register now</a>
        </div>
    </div>
</body>
</html>
{% endblock %}