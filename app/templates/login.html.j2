{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
<html>
<head>
    <title>Sign in to your BBC account</title>
    <style>
        body {
            font-family: sans-serif;
            background-color: #000; /* BBC's dark background */
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 400px;
            padding: 20px;
            text-align: center;
        }

        .bbc-logo {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
        }

        input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #222; /* Dark input background */
            color: #fff;
        }

        button {
            background-color: #007bff; /* BBC's blue */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        .help-links {
            margin-top: 20px;
        }

        .register-link {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="index.html/base.html" class="close-button">
        <img src="https://i0.wp.com/cleanfeed.thetvroom.com/media/2019/08/bbc-logo-correct-001-01.png?resize=800%2C271&ssl=1" width="300" class="d-block mx-auto mb-3"></a>
        <h2 class="text-center">Sign into your BBC account</h2>
        <p>Enter your email</p>

        <form>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Email">
            </div>
            <button type="submit">Continue</button>
        </form>

        <p>Sign in and we'll help you discover more things you'll love.</p>

        <div class="help-links">
            <a href="#">I have forgotten my email</a><br>
            <a href="#">More help signing in</a>
        </div>

        <hr style="border-top: 1px solid #444;">

        <div class="register-link">
            <p>Don't have a BBC account?</p>
            <a href="#">Register now</a>
        </div>
    </div>
</body>
</html>
{% endblock %}