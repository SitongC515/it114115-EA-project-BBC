    <title>BBC News</title>
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #1a1a1a;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        /* --- Top Navigation Bar --- */
        .bbc-top-bar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px 15px;
            height: 50px;
            border-bottom: 1px solid #cccccc;
            background-color: #ffffff;
        }

        .top-bar-left {
            display: flex;
            align-items: center;
        }

        .top-bar-left .menu-icon,
        .top-bar-left .search-icon {
            font-size: 1.4em;
            padding: 0 10px;
            cursor: pointer;
            color: #333;
        }

        .top-bar-left .search-icon {
            margin-left: 5px;
        }

        .top-bar-center {
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center;    /* Center vertically */
            width: 100%;             /* Take full width to center properly */
        }

        .top-bar-center .bbc-logo img {
            height: 28px;
            display: block;
        }

        .top-bar-right {
            display: flex;
            align-items: center;
        }

        .top-bar-right .register-button {
            background-color: #222222;
            color: #ffffff;
            padding: 8px 15px;
            font-weight: bold;
            font-size: 0.9em;
            border-radius: 3px;
            margin-right: 15px;
        }

        .top-bar-right .register-button:hover {
            background-color: #444444;
        }

        .top-bar-right .signin-link {
            font-weight: bold;
            font-size: 0.9em;
            color: #333;
        }

        .top-bar-right .signin-link:hover {
            text-decoration: underline;
        }

        /* --- Main Category Navigation Bar --- */
        .bbc-main-categories {
            background-color: #ffffff;
            border-bottom: 1px solid #cccccc;
            height: 45px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .main-categories-nav {
            display: flex;
            height: 100%;
            max-width: 1280px;
            width: 100%;
            padding: 0 15px;
        }

        .main-categories-nav a {
            display: flex;
            align-items: center;
            padding: 0 12px;
            font-weight: bold;
            font-size: 0.9em;
            color: #333;
            height: 100%;
            border-bottom: 3px solid transparent;
            white-space: nowrap;
        }

        .main-categories-nav a:hover,
        .main-categories-nav a.active {
            border-bottom: 3px solid #1a1a1a;
            color: #1a1a1a;
        }

        .main-categories-nav a#cat-home.active {
            border-bottom: 3px solid #1a1a1a;
            color: #1a1a1a;
        }


        /* --- Main Content Area --- */
        .page-content {
            max-width: 1024px;
            margin: 20px auto;
            padding: 0 15px;
        }

        /* --- News Layout Grid (Based on Screenshot) --- */
        .news-layout-grid {
            display: grid;
            grid-template-columns: 1fr 2fr 1fr;
            gap: 25px;
        }

        /* --- Column Styling --- */
        .news-column-left,
        .news-column-center,
        .news-column-right {
            /* Basic column setup */
        }

        /* --- General Card Styling --- */
        .news-card {
            margin-bottom: 20px;
        }

        .news-card img {
            width: 100%;
            height: auto;
            display: block;
            margin-bottom: 8px;
        }

        .news-card h2,
        .news-card h3 {
            margin: 0 0 5px 0;
            font-size: 1.3em;
            font-weight: bold;
            line-height: 1.2;
            color: #1a1a1a;
        }

        .news-card h3 {
            font-size: 1.15em;
        }

        .news-card p {
            margin: 0 0 8px 0;
            font-size: 0.95em;
            line-height: 1.4;
            color: #4a4a4a;
        }

        .news-card .metadata {
            font-size: 0.8em;
            color: #5a5a5a;
        }

        .news-card .metadata time {
            margin-right: 5px;
        }

        .news-card .metadata .category {
            border-left: 1px solid #cccccc;
            padding-left: 8px;
            margin-left: 5px;
        }

        /* --- Specific Card Styles --- */
        .news-column-center .news-card h2 {
            font-size: 1.8em;
            margin-bottom: 10px;
        }

        .news-column-right .news-card {
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 15px;
        }

        .news-column-right .news-card:last-child {
            border-bottom: none;
            padding-bottom: 0;
            margin-bottom: 0;
        }

        .news-column-right .news-card h3 {
            font-size: 1.05em;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .news-column-right .news-card p {
            font-size: 0.9em;
            margin-bottom: 8px;
        }

        /* --- Utility --- */
        .icon {
            display: inline-block;
        }

        .top-bar-center .bbc-logo img {
            height: 50px;
            width: auto;
            display: block;
        }

        #bbc-logo img {
            height: 120px;
            width: auto;
            display: block;
        }

        header {
            background-color: white;
            color: black;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-logo {
            font-size: 1.5em;
            font-weight: bold;
        }

        .header-links {
            display: flex;
            gap: 20px;
        }

        .header-auth {
            display: flex;
            gap: 10px;
        }

        /* Navigation Styles */
        .navigation {
            background-color: #fff;
            padding: 10px 20px;
            border-bottom: 1px solid #ddd;
        }

        .navigation-links {
            display: flex;
            gap: 20px;
        }

        /* Main Content Styles */
        .main-content {
            padding: 20px;
            display: grid;
            grid-template-columns: 2fr 3fr 2fr;
            gap: 20px;
        }

        .news-item {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .news-item img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .news-item h2 {
            font-size: 1.2em;
            margin-bottom: 5px;
        }

        .news-item p {
            font-size: 0.9em;
            color: #666;
        }

        .news-item .details {
            font-size: 0.8em;
            color: #888;
        }
