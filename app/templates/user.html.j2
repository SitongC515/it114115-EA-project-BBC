{% block app_content %}
    <style>
        .comments-container {
            width: 100%; /* Take full width */
            max-width: 700px; /* Maximum width */
            margin: 20px auto; /* Center the container */
            background-color: #fff; /* White background */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        h2 {
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .signed-in {
            font-size: 0.9em;
            color: #555;
            margin-bottom: 15px;
        }

        .comment-input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #f9f9f9; /* Light gray input background */
        }

        .post-button {
            background-color: #0056b3; /* Darker blue */
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

        .moderation-note {
            font-size: 0.85em;
            color: #777;
            margin-top: 10px;
            margin-bottom: 15px;
        }

        .view-all {
            font-size: 0.9em;
            color: #0056b3;
            text-decoration: none;
        }

        .sort-options {
            font-size: 0.9em;
            color: #555;
            margin-top: 15px;
        }
    </style>

    <div class="comments-container">
        <h2>Comments</h2>
        <div class="signed-in">You are signed in.</div>
        <div><a href="#">View your previous comments.</a></div>
        <textarea class="comment-input" placeholder="Add your comment..."></textarea>
        <button class="post-button">Post comment</button>
        <div class="moderation-note">All posts are reactively-moderated and must obey the house rules.</div>
        <div><a class="view-all" href="#">View all (316)</a></div>
        <div class="sort-options">Latest first</div>
    </div>

{% endblock %}