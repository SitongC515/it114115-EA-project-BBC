<style>
    <style>
        /* Basic Reset & Body */
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #1a1a1a;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        /* --- Top Navigation Bar --- */
        .bbc-top-bar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px 15px;
            height: 50px;
            border-bottom: 1px solid #cccccc;
            background-color: #ffffff;
        }

        .top-bar-left {
            display: flex;
            align-items: center;
        }

        .top-bar-left .menu-icon,
        .top-bar-left .search-icon {
            font-size: 1.4em;
            padding: 0 10px;
            cursor: pointer;
            color: #333;
        }

        .top-bar-left .search-icon {
            margin-left: 5px;
        }

        .top-bar-center .bbc-logo img {
            height: 28px;
            display: block;
        }

        .top-bar-right {
            display: flex;
            align-items: center;
        }

        .top-bar-right .register-button {
            background-color: #222222;
            color: #ffffff;
            padding: 8px 15px;
            font-weight: bold;
            font-size: 0.9em;
            border-radius: 3px;
            margin-right: 15px;
        }

        .top-bar-right .register-button:hover {
            background-color: #444444;
        }

        .top-bar-right .signin-link {
            font-weight: bold;
            font-size: 0.9em;
            color: #333;
        }

        .top-bar-right .signin-link:hover {
            text-decoration: underline;
        }

        /* --- Main Category Navigation Bar --- */
        .bbc-main-categories {
            background-color: #ffffff;
            border-bottom: 1px solid #cccccc;
            height: 45px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .main-categories-nav {
            display: flex;
            height: 100%;
            max-width: 1280px;
            width: 100%;
            padding: 0 15px;
        }

        .main-categories-nav a {
            display: flex;
            align-items: center;
            padding: 0 12px;
            font-weight: bold;
            font-size: 0.9em;
            color: #333;
            height: 100%;
            border-bottom: 3px solid transparent;
            white-space: nowrap;
        }

        .main-categories-nav a:hover,
        .main-categories-nav a.active {
            border-bottom: 3px solid #1a1a1a;
            color: #1a1a1a;
        }

        .main-categories-nav a#cat-home.active {
            border-bottom: 3px solid #1a1a1a;
            color: #1a1a1a;
        }

        /* --- Main Content Area --- */
        .page-content {
            max-width: 1024px;
            margin: 20px auto;
            padding: 0 15px;
        }

        /* --- News Layout Grid (Based on Screenshot) --- */
        .news-layout-grid {
            display: grid;
            grid-template-columns: 1fr 2fr 1fr;
            gap: 25px;
        }

        /* --- Column Styling --- */
        .news-column-left,
        .news-column-center,
        .news-column-right {
            /* Basic column setup */
        }

        /* --- General Card Styling --- */
        .news-card {
            margin-bottom: 20px;
        }

        .news-card img {
            width: 100%;
            height: auto;
            display: block;
            margin-bottom: 8px;
        }

        .news-card h2,
