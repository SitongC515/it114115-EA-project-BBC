{% import 'bootstrap/wtf.html' as wtf %}
 <style>
        body {
            font-family: sans-serif;
            background-color: #000; /* BBC's dark background */
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 400px;
            padding: 20px;
            text-align: center;
        }

        .bbc-logo {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
        }

        input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #222; /* Dark input background */
            color: #fff;
        }

        button {
            background-color: #007bff; /* BBC's blue */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        .help-links {
            margin-top: 20px;
        }

        .register-link {
            margin-top: 20px;
        }
    </style>
{% block app_content %}
   <body>
    <div class="align:center">
        <a href="index.html/base.html">
        <img src="https://logos-world.net/wp-content/uploads/2022/01/BBC-Symbol.png" alt="BBC Logo" width="200" class="d-block mx-auto mb-3" ></a>
        <h2 class="text-center">Register for a BBC account</h2>
        <p class="text-center form-text">You must be 16 or over to register for a BBC account.</p>
        <form method="POST">
            <div class="form-group">
                {{ wtf.quick_form(form) }}
        </form>


        <hr class="bg-secondary">
        <p class="text-center form-text">Already have a BBC account?</p>
        <p class="text-center"><a href="/login" class="form-text">Sign in</a></p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

{% endblock %}