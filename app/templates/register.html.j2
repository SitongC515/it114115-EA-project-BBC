{% import 'bootstrap/wtf.html' as wtf %}
 <style>
        body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            background-color: #000;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 400px;
            padding: 20px;
            text-align: center;
        }

        .bbc-logo {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left; /* Align form groups to the left */
        }

        label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
            font-size: 0.9em;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #666;
            border-radius: 4px;
            box-sizing: border-box;
            background-color: #333;
            color: #fff;
        }

        button {
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
            width: 100%;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        .help-links {
            margin-top: 20px;
        }

        .help-links a {
            display: block;
            margin-bottom: 10px;
        }

        .register-link {
            margin-top: 30px;
        }

        .bbc-logo {
            font-size: 2em;
            font-weight: bold;
            color: #fff;
            letter-spacing: -2px;
        }

        .bbc-logo span {
            background-color: #fff;
            color: #000;
            padding: 5px 8px;
            margin: 0 2px;
        }

        .form-text {
            color: #fff;
        }
    </style>
{% block app_content %}
   <body>
    <div class="container">
        <a href="index.html/base.html" class="close-button">
        <img src="https://i0.wp.com/cleanfeed.thetvroom.com/media/2019/08/bbc-logo-correct-001-01.png?resize=800%2C271&ssl=1" width="400" class="d-block mx-auto mb-3"></a>
        
        <h2 class="text-center">Register for a BBC account</h2>
        <p class="text-center form-text">You must be 16 or over to register for a BBC account.</p>
        <form method="POST">
            {{ wtf.quick_form(form) }}
            
        </form>
    
        <div class="help-links">
            <a href="#">Forgot Password?</a>
        </div>

        <hr class="bg-secondary">
        <p class="text-center form-text">Already have a BBC account?</p>
        <div class="help-links">
            <a href="/login">login</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

{% endblock %}