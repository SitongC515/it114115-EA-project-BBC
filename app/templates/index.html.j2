<style>

/* Basic Reset & Body */

body {

font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;

margin: 0;

padding: 0;

background-color: #ffffff;

color: #1a1a1a;

}

a {

text-decoration: none;

color: inherit;

}

/* --- Top Navigation Bar --- */

.bbc-top-bar {

display: flex;

align-items: center;

justify-content: space-between;

padding: 8px 15px;

height: 50px;

border-bottom: 1px solid #cccccc;

background-color: #ffffff;

}

.top-bar-left {

display: flex;

align-items: center;

}

.top-bar-left .menu-icon,

.top-bar-left .search-icon {

font-size: 1.4em;

padding: 0 10px;

cursor: pointer;

color: #333;

}

.top-bar-left .search-icon {

margin-left: 5px;

}

.top-bar-center .bbc-logo img {

height: 28px;

display: block;

}

.top-bar-right {

display: flex;

align-items: center;

}

.top-bar-right .register-button {

background-color: #222222;

color: #ffffff;

padding: 8px 15px;

font-weight: bold;

font-size: 0.9em;

border-radius: 3px;

margin-right: 15px;

}

.top-bar-right .register-button:hover {

background-color: #444444;

}

.top-bar-right .signin-link {

font-weight: bold;

font-size: 0.9em;

color: #333;

}

.top-bar-right .signin-link:hover {

text-decoration: underline;

}

/* --- Main Category Navigation Bar --- */

.bbc-main-categories {

background-color: #ffffff;

border-bottom: 1px solid #cccccc;

height: 45px;

display: flex;

justify-content: center;

align-items: center;

}

.main-categories-nav {

display: flex;

height: 100%;

max-width: 1280px;

width: 100%;

padding: 0 15px;

}

.main-categories-nav a {

display: flex;

align-items: center;

padding: 0 12px;

font-weight: bold;

font-size: 0.9em;

color: #333;

height: 100%;

border-bottom: 3px solid transparent;

white-space: nowrap;

}

.main-categories-nav a:hover,

.main-categories-nav a.active {

border-bottom: 3px solid #1a1a1a;

color: #1a1a1a;

}

.main-categories-nav a#cat-home.active {

border-bottom: 3px solid #1a1a1a;

color: #1a1a1a;

}

/* --- Main Content Area --- */

.page-content {

max-width: 1024px;

margin: 20px auto;

padding: 0 15px;

}

/* --- News Layout Grid (Based on Screenshot) --- */

.news-layout-grid {

display: grid;

grid-template-columns: 1fr 2fr 1fr;

gap: 25px;

}

/* --- Column Styling --- */

.news-column-left,

.news-column-center,

.news-column-right {

/* Basic column setup */

}

/* --- General Card Styling --- */

.news-card {

margin-bottom: 20px;

}

.news-card img {

width: 100%;

height: auto;

display: block;

margin-bottom: 8px;

}

.news-card h2,

.news-card h3 {

margin: 0 0 5px 0;

font-size: 1.3em;

font-weight: bold;

line-height: 1.2;

color: #1a1a1a;

}

.news-card h3 {

font-size: 1.15em;

}

.news-card p {

margin: 0 0 8px 0;

font-size: 0.95em;

line-height: 1.4;

color: #4a4a4a;

}

.news-card .metadata {

font-size: 0.8em;

color: #5a5a5a;

}

.news-card .metadata time {

margin-right: 5px;

}

.news-card .metadata .category {

border-left: 1px solid #cccccc;

padding-left: 8px;

margin-left: 5px;

}

/* --- Specific Card Styles --- */

.news-column-center .news-card h2 {

font-size: 1.8em;

margin-bottom: 10px;

}

.news-column-right .news-card {

border-bottom: 1px solid #e0e0e0;

padding-bottom: 15px;

}

.news-column-right .news-card:last-child {

border-bottom: none;

padding-bottom: 0;

margin-bottom: 0;

}

.news-column-right .news-card h3 {

font-size: 1.05em;

font-weight: bold;

margin-bottom: 8px;

}

.news-column-right .news-card p {

font-size: 0.9em;

margin-bottom: 8px;

}

/* --- Utility --- */

.icon {

display: inline-block;

}

.top-bar-center .bbc-logo img {

height: 50px;

width: auto;

display: block;

}

#bbc-logo img {

height: 120px;

width: auto;

display: block;

}

header {

background-color: white;

color: black;

}

.header-container {

display: flex;

justify-content: space-between;

align-items: center;

}

/* Style the buttons and links */

.register-button {

background-color: black;

color: white;

}

/* Styles for the new film review section */

.film-review-section {

margin-top: 20px; /* Add some space above the section */

border-top: 1px solid #ccc; /* Add a separator line */

padding-top: 20px;

}

.film-review-content {

display: flex;

align-items: flex-start; /* Align items to the top */

gap: 20px; /* Space between image and text */

}

.film-review-image {

flex: 1; /* Take up available space */

}

.film-review-image img {

width: 100%; /* Image takes full width of its container */

height: auto;

display: block;

}

.film-review-text {

flex: 1; /* Take up available space */

}

.film-review-category {

font-size: 0.8em;

color: #5a5a5a;

margin-bottom: 5px;

}

.film-review-title {

font-size: 1.5em;

font-weight: bold;

margin-bottom: 10px;

}

.film-review-stars {

color: #ff9900; /* Example star color */

margin-bottom: 10px;

}

.film-review-description {

font-size: 0.95em;

line-height: 1.4;

color: #4a4a4a;

margin-bottom: 15px;

}

.film-review-link {

display: inline-block;

padding: 8px 15px;

color: #333;

text-decoration: none;

font-size: 0.9em;

}

.film-review-link:hover {

background-color: #f0f0f0;

}

/* Styles for the new news sections */

.news-sections {

margin-top: 20px;

border-top: 1px solid #ccc;

padding-top: 20px;

}

.news-sections-grid {

display: grid;

grid-template-columns: repeat(4, 1fr); /* Four columns */

gap: 20px;

}

.news-section {

/* Basic styling for each section */

}

.news-section > a {

font-size: 0.8em;

font-weight: bold;

color: #333;

display: block;

margin-bottom: 10px;

}

.news-item {

margin-bottom: 15px;

}

.news-item img {

width: 100%;

height: auto;

display: block;

margin-bottom: 5px;

}

.news-item h3 {

font-size: 1em;

font-weight: bold;

margin-bottom: 5px;

}

.news-item p {

font-size: 0.85em;

color: #4a4a4a;

margin-bottom: 5px;

}

.news-item .metadata {

font-size: 0.7em;

color: #5a5a5a;

}

/* Footer Styles */

.bbc-footer {

margin-top: 20px;

border-top: 1px solid #ccc;

padding-top: 20px;

text-align: center;

font-size: 0.8em;

color: #5a5a5a;

}

.footer-links {

margin-bottom: 10px;

}

.footer-links a {

margin: 0 5px;

}

.language-select {

margin-bottom: 10px;

}

.social-links {

margin-bottom: 10px;

}

.social-links a {

margin: 0 5px;

}

.copyright {

font-size: 0.7em;

}

</style>

